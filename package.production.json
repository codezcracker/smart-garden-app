{
  "name": "smart-garden-iot",
  "version": "2.0.0",
  "description": "Smart Garden IoT System - Production Configuration",
  "main": "server.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "deploy:vercel": "vercel --prod",
    "deploy:docker": "docker build -t smart-garden-iot . && docker run -p 3000:3000 smart-garden-iot",
    "db:backup": "mongodump --uri=$MONGODB_URI --out=./backups/$(date +%Y%m%d_%H%M%S)",
    "db:restore": "mongorestore --uri=$MONGODB_URI ./backups/latest",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "next": "^15.4.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "mongodb": "^6.0.0",
    "mongoose": "^8.0.0",
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.0.0",
    "winston": "^3.10.0",
    "dotenv": "^16.3.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "nodemailer": "^6.9.0",
    "socket.io": "^4.7.0",
    "redis": "^4.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^15.4.4",
    "jest": "^29.0.0",
    "@testing-library/react": "^13.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "supertest": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "iot",
    "smart-garden",
    "esp8266",
    "sensors",
    "monitoring",
    "automation"
  ],
  "author": "Smart Garden IoT Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/smart-garden-iot.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/smart-garden-iot/issues"
  },
  "homepage": "https://your-domain.com"
}
